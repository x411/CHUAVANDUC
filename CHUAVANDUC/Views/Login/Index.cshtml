@using System.Web.Configuration
@{
    ViewBag.Title = System.Configuration.ConfigurationManager.AppSettings["SiteName"] + " :: Login";
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_LayoutCHUAVANDUC.cshtml";
}

<div class="row wow fadeInUp">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
        <form id="formLogin" action="/Login/Login" class="form-horizontal form-login" role="form" method="post">
            <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
            <div class="box-content">
                <div class="text-center">
                    <h3 class="page-header">ĐĂNG NHẬP</h3>
                    <div style="color:Red;text-align: center;" id="login-failed"></div>
                </div>
                <div class="col-xs-8">
                    <div class="form-group">
                        <div class="col-xs-12">
                            <div class="col-xs-12 input-group">
                                <span class="input-group-addon" style="width:35px;"><i class="fa fa-user"></i></span>
                                <input autocomplete="off" id="UserName" name="UserName" type="text" placeholder="Tên đăng nhập" class="form-control" />
                                <div id="usernameErr" style="display:none; color:red;">Username Required</div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <div class="col-xs-12 input-group">
                                <span class="input-group-addon" style="width:35px;"><i class="fa fa-key"></i></span>
                                <input id="Password" name="Password" type="password" value="" placeholder="mật khẩu" class="form-control">
                                <div id="passwordErr" style="display:none; color:red;">Password Required</div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <div class="checkbox">
                                <label>
                                    <input id="Remember" name="Remember" class="toggle-value" type="checkbox" value=""> Remember me
                                    <i class="fa fa-square-o"></i>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="footer" style="margin-bottom:15px;">
                        <button id="login-btn" type="submit" class="btn btn-primary" style="width:100%;">Login</button>
                        <div id="auth-mes" class="btn btn-primary btn-block" style="display:none; padding:6px 12px;text-align:center; margin-top:0; cursor:default">
                            Authenticating...
                        </div>
                    </div>
                </div>
                <div class="col-xs-4 text-center">
                    <img style="margin-top:15px;" src="~/Content/images/login_icon.png" />
                </div>
                <div class="clearfix"></div>
            </div>
        </form>
    </div>
</div>

