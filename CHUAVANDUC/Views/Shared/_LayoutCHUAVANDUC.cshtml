        //});

        $('.demo').jis();

        $("a.submenu").click(function () {
            $(".menuBar").slideToggle("normal", function () {
                // Animation complete.
            });
        });

        $("nav .menuBar ul li a").click(function (e) {
            var self = $(this);
            if (!self.parent().hasClass('dropdown')) {
                //GET url
                var url = self.attr('href');
                var isAjax = $(this).attr('data-ajax');

                if ($('a.submenu').is(':visible')) {
                    $("ul.menu li").removeClass("active");

                    self.parent().addClass('active');

                    if (self.next('.menu').length || self.next('.sub_menu').length || self.next('.mega_menu').length) {
                        self.parent()
                            .addClass('current')
                            .siblings()
                            .removeClass('current')
                            .children(':not(a)')
                            .slideUp(300);
                        self.next().stop().slideToggle(300);
                        self.parent().siblings().children('a').removeClass('prevented');

                        if (!(self.hasClass('prevented'))) {
                            e.preventDefault();
                            self.addClass('prevented');
                        } else {
                            self.removeClass('prevented');
                        }
                    }
                }

                if (url != undefined && url != null && url != '' && url != '/') {
                    if (isAjax == 'True') {
                        LoadAjaxContent(url, '');
                        e.preventDefault();
                    }
                    else {

                    }
                }

            }
        });

    </script>

